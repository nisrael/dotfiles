[general]
import = [
{% if ansible_distribution == "MacOSX" %}
    # macOS-specific settings (includes common.toml)
    "~/.config/alacritty/macos.toml",
{% elif ansible_kernel is search("microsoft") %}
    # WSL-specific settings (includes common.toml)
    "~/.config/alacritty/windows.toml",
{% elif ansible_system == "Linux" %}
    # Native Linux-specific settings (includes common.toml)
    "~/.config/alacritty/linux.toml",
{% endif %}
]

