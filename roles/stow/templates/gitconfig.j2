# Git configuration
# Generated by Ansible - DO NOT EDIT MANUALLY
# Platform: {{ ansible_distribution }}{% if ansible_kernel is search("microsoft") %} (WSL){% endif %}

[include]
    # Common settings for all platforms
    path = ~/.config/git/common.gitconfig
{% if ansible_distribution == "MacOSX" %}
    # macOS-specific settings
    path = ~/.config/git/macos.gitconfig
{% elif ansible_kernel is search("microsoft") %}
    # WSL-specific settings
    path = ~/.config/git/wsl.gitconfig
{% elif ansible_system == "Linux" %}
    # Native Linux-specific settings
    path = ~/.config/git/linux.gitconfig
{% endif %}
    # Local machine-specific overrides (not version controlled)
    path = ~/.gitconfig.local

[commit]
    verbose = true
[core]
    pager = delta
    editor = nvim
    attributesfile = ~/.gitattributes
[merge]
    tool = nvimdiff
[mergetool "vscode"]
    cmd = code --wait --merge "$LOCAL" "$REMOTE" "$BASE" "$MERGED"
[push]
    default = current
[rebase]
    autosquash = true
    autoStash = true
[blame]
    date = relative
[alias]
    co = checkout
    st = status
    rh = reset --hard
    rs = reset --soft
    rr = reset --mixed
    recent = branch --sort=-committerdate
    undo = reset --soft HEAD^
    recommit = commit --reedit-message ORIG_HEAD
    track = branch --set-upstream-to
    difft = -c diff.external=difft diff
    pushf = push --force-with-lease
[credential]
    helper = cache
[interactive]
    diffFilter = delta --color-only
[add.interactive]
    useBuiltin = false # required for git 2.37.0
[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
    side-by-side = true
[diff]
    colorMoved = default
