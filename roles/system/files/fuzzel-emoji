ğŸ”‡ muted speaker"

# Show menu and get selection
selected=$(echo "$emojis" | fuzzel --dmenu --prompt "Emoji: " --width 60)

if [ -z "$selected" ]; then
    exit 0
fi

# Extract emoji (first character/characters before space)
emoji=$(echo "$selected" | awk '{print $1}')

# Copy to clipboard
echo -n "$emoji" | wl-copy

notify-send "Emoji" "Copied $emoji to clipboard"
