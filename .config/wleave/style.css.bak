/* Carbonfox theme for wleave */

* {
    background-image: none;
}

window {
    font-family: "JetBrains Mono", "Fira Code", monospace, sans-serif;
    font-size: 14pt;
    font-weight: 500;
    color: #b6b8bb; /* carbonfox subtext0 */
    background-color: rgba(14, 14, 14, 0.95); /* carbonfox mantle with high opacity */
}

button {
    background-repeat: no-repeat;
    background-position: center 35%;
    background-size: 25%;
    border: 2px solid #3a3a3a; /* carbonfox overlay0 */
    border-radius: 12px;
    background-color: #1e1e1e; /* carbonfox surface1 */
    margin: 5px;
    padding: 20px;
    min-width: 160px;
    min-height: 80px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    text-shadow: none;
    -gtk-icon-shadow: none;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

button:hover {
    background-color: #2a2a2a; /* carbonfox surface2 */
    border-color: #535559; /* carbonfox overlay1 */
    color: #f2f4f8; /* carbonfox text */
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.4);
}

button:focus {
    background-color: #2a2a2a;
    color: #f2f4f8;
    box-shadow: 0 0 0 3px rgba(120, 169, 255, 0.3); /* carbonfox blue with transparency */
}

/* Individual button accent colors on hover */
#lock:hover {
    border-color: #78A9FF; /* carbonfox blue */
    box-shadow: 0 6px 12px rgba(120, 169, 255, 0.2);
}

#lock:focus {
    border-color: #78A9FF;
}

#logout:hover {
    border-color: #08BDBA; /* carbonfox yellow (cyan-ish) */
    box-shadow: 0 6px 12px rgba(8, 189, 186, 0.2);
}

#logout:focus {
    border-color: #08BDBA;
}

#suspend:hover {
    border-color: #BE95FF; /* carbonfox magenta */
    box-shadow: 0 6px 12px rgba(190, 149, 255, 0.2);
}

#suspend:focus {
    border-color: #BE95FF;
}

#reboot:hover {
    border-color: #3DDBD9; /* carbonfox orange (cyan) */
    box-shadow: 0 6px 12px rgba(61, 219, 217, 0.2);
}

#reboot:focus {
    border-color: #3DDBD9;
}

#shutdown:hover {
    border-color: #EE5396; /* carbonfox red */
    box-shadow: 0 6px 12px rgba(238, 83, 150, 0.2);
}

#shutdown:focus {
    border-color: #EE5396;
}

/* Button images */
