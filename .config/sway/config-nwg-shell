# Sway config for nwg-shell session
# Shares keybindings and settings with main config, but uses nwg-shell components
# instead of Waybar/Rofi/Wleave.

### Color scheme
include ~/.config/sway/colors-carbonfox

### Variables
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term footclient
# Use nwg-drawer instead of rofi
set $menu nwg-drawer

### Output configuration
output eDP-1 scale 1.0

### Idle configuration
exec swayidle -w timeout 300 'swaylock -f' timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"'  before-sleep 'swaylock -f'

### Input configuration
input type:keyboard {
    xkb_layout "de"
}

### Key bindings
#
# Basics:
#
    bindsym $mod+Return exec $term
    bindsym $mod+Shift+q kill
    bindsym $mod+d exec $menu
    floating_modifier $mod normal
    bindsym $mod+Shift+c reload
    # Exit via nwg-bar instead of swaynag
    bindsym $mod+Shift+e exec nwg-bar
#
# Moving around:
#
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right
#
# Workspaces:
#
    bindsym $mod+1 workspace number 1
    bindsym $mod+2 workspace number 2
    bindsym $mod+3 workspace number 3
    bindsym $mod+4 workspace number 4
    bindsym $mod+5 workspace number 5
    bindsym $mod+6 workspace number 6
    bindsym $mod+7 workspace number 7
    bindsym $mod+8 workspace number 8
    bindsym $mod+9 workspace number 9
    bindsym $mod+0 workspace number 10
    bindsym $mod+Shift+1 move container to workspace number 1
    bindsym $mod+Shift+2 move container to workspace number 2
    bindsym $mod+Shift+3 move container to workspace number 3
    bindsym $mod+Shift+4 move container to workspace number 4
    bindsym $mod+Shift+5 move container to workspace number 5
    bindsym $mod+Shift+6 move container to workspace number 6
    bindsym $mod+Shift+7 move container to workspace number 7
    bindsym $mod+Shift+8 move container to workspace number 8
    bindsym $mod+Shift+9 move container to workspace number 9
    bindsym $mod+Shift+0 move container to workspace number 10
    bindsym Ctrl+$mod+Left workspace prev
    bindsym Ctrl+$mod+Right workspace next
#
# Layout stuff:
#
    bindsym $mod+b splith
    bindsym $mod+v splitv
    bindsym $mod+s layout stacking
    bindsym $mod+w layout tabbed
    bindsym $mod+e layout toggle split
    bindsym $mod+f fullscreen
    bindsym $mod+Shift+space floating toggle
    bindsym $mod+space focus mode_toggle
    bindsym $mod+a focus parent
#
# Scratchpad:
#
    bindsym $mod+Shift+minus move scratchpad
    bindsym $mod+minus scratchpad show
#
# Resizing containers:
#
mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"
#
# Utilities:
#
    # Volume (volctl + avizo)
    bindsym --locked XF86AudioMute exec volctl -u toggle-mute
    bindsym --locked XF86AudioLowerVolume exec volctl -u down 5
    bindsym --locked XF86AudioRaiseVolume exec volctl -u up 5
    bindsym --locked XF86AudioMicMute exec volctl -m toggle-mute
    # Brightness (lightctl via avizo)
    bindsym --locked XF86MonBrightnessDown exec lightctl down 5
    bindsym --locked XF86MonBrightnessUp exec lightctl up 5
    # Screenshots
    bindsym Print exec grim -g "$(slurp)" - | tee ~/Pictures/screenshot-$(date +%Y%m%d-%H%M%S).png | wl-copy
    bindsym $mod+p exec grim -g "$(slurp)" - | tee ~/Pictures/screenshot-$(date +%Y%m%d-%H%M%S).png | wl-copy
    bindsym Shift+Print exec grim - | tee ~/Pictures/screenshot-$(date +%Y%m%d-%H%M%S).png | wl-copy
    bindsym $mod+Shift+p exec grim - | tee ~/Pictures/screenshot-$(date +%Y%m%d-%H%M%S).png | wl-copy
    # File manager
    bindsym $mod+y exec nautilus --new-window
    # Wallpaper
    bindsym $mod+Shift+w exec carbonfox-wallpaper next
    # Lock screen
    bindsym $mod+Shift+x exec swaylock -f
    # Idle toggle
    bindsym $mod+z exec killall -SIGUSR1 swayidle
    # Clipboard / Emoji / History / WiFi / Bluetooth
    bindsym Ctrl+Alt+p exec fuzzel-clipboard
    bindsym Ctrl+Alt+e exec fuzzel-emoji
    bindsym Ctrl+Alt+r exec fuzzel-history
    bindsym Ctrl+Alt+w exec fuzzel-wifi
    bindsym Ctrl+Alt+b exec btctl
    bindsym $mod+F2 exec fuzzel-tldr
    bindsym $mod+F3 exec fuzzel-cheat
    # Media keys (playerctl)
    bindsym --locked XF86AudioPlay exec playerctl play-pause
    bindsym --locked XF86AudioNext exec playerctl next
    bindsym --locked XF86AudioPrev exec playerctl previous
    # Keyboard backlight
    bindsym Shift+F1 exec brightnessctl -d kbd_backlight set 10%-
    bindsym Shift+F2 exec brightnessctl -d kbd_backlight set +10%
    # Neovim cheatsheet
    bindsym $mod+F1 exec kitty --class floating-cheatsheet -o initial_window_width=82c -o initial_window_height=40c glow -p ~/.config/nvim/cheatsheet.md
    # Display scale
    bindsym Ctrl+$mod+1 exec swaymsg output eDP-1 scale 1.0
    bindsym Ctrl+$mod+2 exec swaymsg output eDP-1 scale 1.25
    bindsym Ctrl+$mod+3 exec swaymsg output eDP-1 scale 1.5
    bindsym Ctrl+$mod+4 exec swaymsg output eDP-1 scale 1.75
    bindsym Ctrl+$mod+5 exec swaymsg output eDP-1 scale 2.0

# No bar block â€” nwg-panel runs independently

# Autostart: nwg-shell components
exec nwg-panel
exec nwg-dock -d -i 48 -l bottom
exec nwg-autotiling
exec nwg-clipman

# Autostart: shared services
exec /usr/bin/gnome-keyring-daemon --start --components=secrets
exec /usr/bin/foot --server
exec /usr/local/bin/avizo-service
exec /usr/local/bin/swaync
exec carbonfox-wallpaper random
exec /usr/bin/1password --silent
exec blueman-applet

# Window rules
for_window [app_id="1password"] floating enable
for_window [app_id="floating-cheatsheet"] floating enable
for_window [app_id="floating-tldr"] floating enable
for_window [app_id="floating-cheat"] floating enable
for_window [app_id="blueman-manager"] floating enable

# Workspace assignments
assign [app_id="org.mozilla.firefox"] workspace 3
assign [app_id="org.gnome.Evolution"] workspace 4
assign [app_id="feishin"] workspace 5
for_window [app_id="feishin"] border none

# Autostart: applications
exec firefox
exec evolution
exec feishin

include /etc/sway/config.d/*
